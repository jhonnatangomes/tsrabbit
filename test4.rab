fun slice(arr, start, end) {
  var newArr = [];
  for (var i = start; i < end; i = i + 1) {
    push(newArr, arr[i]);
  }
  return newArr;
}

fun merge(arr, arr2) {
  var newArr = [];
  while (length(arr) != 0 && length(arr2) != 0) {
    if(arr[0] < arr2[0]) {
      push(newArr, arr[0]);
      arr = slice(arr, 1, length(arr));
    } else {
      push(newArr, arr2[0]);
      arr2 = slice(arr2, 1, length(arr2));
    }
  }
  if(length(arr) == 0) {
    for (var i = 0; i < length(arr2); i = i + 1) {
      push(newArr, arr2[i]);
    }
  }
  if(length(arr2) == 0) {
    for (var i = 0; i < length(arr); i = i + 1) {
      push(newArr, arr[i]);
    }
  }
  return newArr;
}

fun mergeSort(arr) {
  if (length(arr) <= 1) return arr;
  var middleIndex = length(arr) / 2;
  var leftArr = slice(arr, 0, middleIndex);  
  var rightArr = slice(arr, middleIndex, length(arr));
  return merge(mergeSort(leftArr), mergeSort(rightArr));
}

